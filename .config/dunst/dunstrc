# dunst configuration tuned to match Waybar style
# Save as ~/.config/dunst/dunstrc

[global]
    ### Display ###
    monitor = 0
    follow = keyboard

    ### Geometry ###
    width = (0, 300)
    height = (0, 300)
    origin = top-right
    offset = (10, 50)
    scale = 0
    notification_limit = 20

    ### Progress bar ###
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    progress_bar_corner_radius = 0
    progress_bar_corners = all

    icon_corner_radius = 4
    icon_corners = all

    indicate_hidden = yes

    # Transparency (0..100)
    transparency = 0

    # Separator & spacing
    separator_height = 2
    separator_color = frame
    padding = 8
    horizontal_padding = 8
    text_icon_padding = 8

    # Frame (more visible)
    frame_width = 2
    frame_color = "#313244"   # видимая, но ненавязчивая рамка в стиле панели

    # Gap between stacked notifications (requires compositor) - optional, subtle separation
    gap_size = 6

    sort = yes

    ### Text ###
    # Use JetBrainsMono Nerd Font if installed; otherwise replace with Monospace
    font = "JetBrainsMono Nerd Font 10"
    line_height = 0
    markup = full

    # Default format: show a bell icon (glyph) + bold summary, body below
    # %s = summary, %b = body
    format = "<span foreground='#89b4fa'>󰂚</span> <b>%s</b>\n%b"

    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    enable_recursive_icon_lookup = true
    # icon_theme kept for compatibility, but we rely on glyphs in format
    icon_theme = Adwaita
    icon_position = left
    min_icon_size = 20
    max_icon_size = 64
    icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    ignore_dbusclose = true
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/xdg-open
    always_run_script = true

    title = Dunst
    class = Dunst

    corner_radius = 8
    corners = all

    force_xwayland = false

    ### mouse
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[experimental]
    per_monitor_dpi = false

# Urgency sections: non-critical notifications timeout = 5s, critical = sticky (0)
[urgency_low]
    # subtle darker tile + muted text
    background = "#181825"
    foreground = "#cdd6f4"
    timeout = 5
    # use glyph and subtle color for icon
    format = "<span foreground='#6c7086'>󰂚</span> <b>%s</b>\n%b"

[urgency_normal]
    background = "#11111b"
    foreground = "#d9e0ee"
    timeout = 5
    override_pause_level = 30
    format = "<span foreground='#89b4fa'>󰂚</span> <b>%s</b>\n%b"

[urgency_critical]
    background = "#900000"
    foreground = "#ffffff"
    frame_color = "#f38ba8"   # яркая рамка для критических
    timeout = 0
    override_pause_level = 60
    # use smashed/bell-slash glyph for critical
    format = "<span foreground='#f38ba8'>󰂚</span> <b>%s</b>\n%b"

# Example rules section - customize per app if needed.
# Rules allow overriding background/foreground/format/timeout/etc for matching notifications.

# Longer notifications for specific apps (example)
[longer_notifications]
    desktop_entry = thunderbird
    timeout = 15

# Make update notifications sticky (example)
[sticky_updates]
    desktop_entry = pamac
    timeout = 0

# Allow critical messages to show even if paused (useful with dunstctl pause)
[show_critical_when_paused]
    msg_urgency = critical
    fullscreen = show

